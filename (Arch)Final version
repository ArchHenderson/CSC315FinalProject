package csc315finalproject;

import java.io.FileNotFoundException;
import java.io.File;
import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class CSC315FinalProjectMain {

    public static void main(String[] args) {
        Connection connection = null;
        ResultSet resultSet = null;
        String url = "jdbc:mysql://";
        Scanner scanner = new Scanner(System.in);
        String user = null;
        String password = null;
        String tableStatement = "";
        String databaseName = null;
        String host = null;
        File file = null;
        Statement statement = null;
        int columnNum;

        if (args.length > 0) { // This is for running from the command line
        file = new File("datafile.txt");
        try {
            while (connection == null) {
                try {
                    System.out.println("Enter username");
                    user = scanner.next();
                    scanner.nextLine();
                    System.out.println("Enter password");
                    password = scanner.next();
                    System.out.println("Enter host name");
                    host = scanner.next();
                    connection = DriverManager.getConnection(url + "localhost", user, password);
                    if (connection != null) {
                        System.out.println("Connected to the server");
                    }
                    System.out.println("Enter database to creat/connect to");
                    databaseName = scanner.next();
                    try{
                        connection = DriverManager.getConnection(url + "/" + databaseName, user, password);
                        System.out.println("Connected to database " + databaseName);
                    }catch (SQLException e){
                        statement = connection.createStatement();
                        statement.executeUpdate("CREATE DATABASE " + databaseName);
                        connection = DriverManager.getConnection(url + "/" + databaseName, user, password);
                        System.out.println("Database " + databaseName + " created");
                    }
                    scanner.nextLine();

                } catch (SQLException e) {
                    System.out.println("Error, try again");
                }
            }

            try {
                scanner = new Scanner(file);
                scanner.useDelimiter(";"); // Allows whole sql statments to be input from one data file

                while (scanner.hasNext()) {
                    tableStatement = scanner.next();
                    System.out.println(tableStatement);

                    try {
                        statement = connection.createStatement();
                        statement.executeUpdate(tableStatement);

                        // An sql exception is created when running executeUpdate on a query
                    } catch (SQLException e) {
                        try {
                            resultSet = statement.executeQuery(tableStatement);
                            columnNum = resultSet.getMetaData().getColumnCount();
                            //prints query reults
                            System.out.println("");
                            while (resultSet.next()) {
                                for (int i = 1; i <= columnNum; i++) {
                                    if (i > 1) {
                                        System.out.print(", ");
                                    }
                                    System.out.print(resultSet.getMetaData().getColumnName(i)
                                            + " " + resultSet.getString(i));
                                }
                                System.out.println("");
                            }
                        } catch (SQLException ex) {
                            ex.printStackTrace();
                        }
                    } finally {
                        if (statement != null) {
                            statement.close();
                        }
                    }
                }
            } catch (FileNotFoundException e) {
                System.out.println("file not found");
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
        } else {
            System.out.println("No data file given");
        }
    }
}
